# Include documentation
include README.md
include README_COMPLETE.md
include DEPLOYMENT_GUIDE.md
include APP_INFO.md
include LICENSE

# Include configuration files
include requirements.txt
include requirements_server.txt
include .gitignore
include setup.py

# Include deployment files
include deploy.sh
include backup.sh
include wsgi.py
include gunicorn_config.py
include docker-compose.yml
include Dockerfile
include nginx.conf
include pos-system.service

# Include templates and static files
recursive-include templates *.html
recursive-include static *.css *.js *.png *.jpg *.ico *.json

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.db
global-exclude *.sqlite
global-exclude *.log
global-exclude __pycache__
global-exclude .DS_Store
global-exclude Thumbs.db
